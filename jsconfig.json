{
    "compilerOptions": {
        "jsx": "react",
        "lib": ["es6", "dom"],
        "rootDir": "src",
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "Node",


        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "include": ["./src"],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}